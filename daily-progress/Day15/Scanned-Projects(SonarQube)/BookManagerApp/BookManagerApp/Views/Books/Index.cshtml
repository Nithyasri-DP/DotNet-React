@model IEnumerable<BookManagerApp.Models.Book>
<h2>Book List</h2>
<table class="table">
    <thead>
        <tr><th>ID</th><th>Title</th><th>Author</th><th>Genre</th><th>Details</th></tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@Html.ActionLink("Details", "Details", "Books", new { id = book.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_BookDetails", Model.First())

